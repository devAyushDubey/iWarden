<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/stu_name_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayush Dubey"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/sanfrancisco_text_bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/stu_room_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="410"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/sanfrancisco_text_light"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/stu_id_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stu_name_placeholder"
            android:text="2000290110049"
            android:textSize="15dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/sanfrancisco_text_light"
            android:textColor="@color/black" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
